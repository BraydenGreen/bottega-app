<%= form_for(game) do |f| %>
  <%= f.text_field :game_time %>

  <%= f.text_field :player1_name%>
  <%= f.text_field :player1_score %>
  <%= f.text_field :player2_name %>
  <%= f.text_field :player2_score %>
  <% if game.errors.any? %>
    <% game.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>