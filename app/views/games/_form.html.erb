<%= form_for(game) do |f| %>



<div class="container">
  <div class="row">
    <div class="col-sm-6 game-main">
      <div class="form-group">
        <%= f.label :player1_name, "Add User" %>
        <%= f.collection_select(:player1_name, @players, :id, :username,
        {
          include_blank: true
        },
        class: 'form-control'
          )
          %>
      </div>
      <div class="form-group">
        <%= f.label :player1_score, "Score" %>
        <%= f.number_field :player1_score %>
      </div>
    </div>


    <div class="col-sm-6 game-main">
      <div class="form-group">
        <%= f.label :player2_name, "Add User" %>
        <%= f.collection_select(:player2_name, @players, :id, :username,
        {
          include_blank: true
        },
        class: 'form-control'
          )
          %>
      </div>
      <div class="form-group">
        <%= f.label :player2_score, "Score" %>
        <%= f.number_field :player2_score, require: true %>
      </div>
    </div>
  </div>
</div>

    <div class="form-group">
      <%= f.submit "New Match", class: 'btn btn-primary' %>
    </div>

    <% end %>